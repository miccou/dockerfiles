FROM rocker/geospatial:4

RUN R -e "install.packages('leaflet',dependencies=TRUE, repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('leaflet.extras',dependencies=TRUE, repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('leaflet.extras2',dependencies=TRUE, repos='http://cran.rstudio.com/')" 
